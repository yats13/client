generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model psychologist {
  id          String    @id @default(uuid())
  slug        String @unique
  name        String
  image       String
  title       String
  description String
  email       String @unique
  phone       String
  bg_color    String
  visit_type  String
  locale      String

  @@index([slug])
}

model appointment {
  id                 String   @id @default(uuid())
  name               String
  email              String
  phone              String
  dateTime           DateTime
  psychologistSlug   String
  createdAt          DateTime @default(now())
}
